<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondGuitarActivity">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="386dp"
        android:layout_height="228dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="445dp"
        android:fontFamily="sans-serif-medium"
        android:text="Перед тем, как приступить к правилам посадки и положения рук, стоит отметить фундаментальную вещь, относящуюся к теме. Все тело должно быть максимально расслабленно и не напрягаться от совершенных движений. Это касается рук, пальцев и корпуса. Ваше положение не должно болезненно отзываться в частях тела, и вы не должны быстро уставать от него, органы и конечности не затекают и не дубеют.  Все начинается непосредственно с положения тела. В этом плане гитаристы разделились между собой на два лагеря – одни считают единственно правильным классическое положение гитары, вторые – эстрадное. Чем же они отличаются?   "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="sans-serif-black"
        android:text="Постановка руки"
        app:layout_constraintBottom_toTopOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="192dp"
        android:layout_height="240dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        app:srcCompat="@drawable/postanovka_ruk_na_gitare_2_jpg" />

    <Button
        android:id="@+id/backupButton15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="31dp"
        android:onClick="backupButton15"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14" />
</androidx.constraintlayout.widget.ConstraintLayout>